		<Require id="header" src="header"/>
		
		<View id="content">
			
			<View class="content">
				<Label id="instructions" text="Please enter your initials:"/>

				<View id="txtFieldBtnWrap">
					<TextField id="newEmployeeTxtField" hintText="Enter your initials"/>

					<Button id="submitNewEmployee" platform="ios">
